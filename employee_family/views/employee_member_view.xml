<odoo>
    <data>
        <record id="view_employee_family_form" model="ir.ui.view">
            <field name="name">employee.family.form</field>
            <field name="model">employee.family</field>
            <field name="arch" type="xml">
                <form string="Employee family">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="date_of_birth"/>
                            <field name="family_relationship"/>
                            <field name="employee_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    
        <record id="view_employee_family_tree" model="ir.ui.view">
            <field name="name">employee.family.tree</field>
            <field name="model">employee.family</field>
            <field name="arch" type="xml">
                <list string="Employee Family">
                    <field name="name"/>
                    <field name="date_of_birth"/>
                    <field name="family_relationship"/>
                    <field name="employee_id"/>
                </list>
            </field>
        </record>

        <record id="view_employee_family_kanban" model="ir.ui.view">
            <field name="name">employee.family.kanban</field>
            <field name="model">employee.family</field>
            <field name="arch" type="xml">
                <kanban default_group_by="family_relationship">
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_record_title">
                                    <field name="name"/>
                                </div>
                                <div>
                                    <strong>Employee: </strong><field name="employee_id"/>
                                </div>
                                <div>
                                    <strong>Relation: </strong><field name="family_relationship"/>
                                </div>
                                <div>
                                    <strong>DOB: </strong><field name="date_of_birth"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="action_employee_family" model="ir.actions.act_window">
            <field name="name">Employee Family</field>
            <field name="res_model">employee.family</field>
            <field name="view_mode">list,form,kanban</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new Employee family.
                </p>
            </field>
        </record>

        <menuitem id="menu_employee_family_root"
                  name="Employee family"
                  parent="hr.menu_hr_root"/>

            <menuitem id="menu_employee_family"
                    name="Employee family"
                    parent="menu_employee_family_root"
                    action="action_employee_family"/>

        <record id="inherit_employee_form" model="ir.ui.view">
            <field name="name">employee.family.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='hr_settings']" position="after">
                    <page name="employee_family" string="Employee family">
                        <field name="employee_family_ids" />
                    </page>
                </xpath>
            </field>
        </record>       

    </data>
</odoo>